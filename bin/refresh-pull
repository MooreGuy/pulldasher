#!/usr/bin/env node
require('../lib/debug').default('pulldasher:refresh*');

var refresh = require('../lib/refresh');
var db = require('../lib/db');
var number = process.argv[2];

if ("" + parseInt(number, 10) !== number) {
   console.error("%s is not a number", number)
   process.exit(1);
}

refresh.pull(number)
.done(function() {
   db.end();
});
